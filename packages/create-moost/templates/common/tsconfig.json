{
  "compilerOptions": {
    "outDir": "dist",

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "isolatedModules": true,
    "useDefineForClassFields": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src", "*.config.ts"]
}
